<Window x:Class="CitizenRequestsAdmin.ResponseEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор Ответов" Height="300" Width="500">
    <Grid>
        <Label Content="Ответ:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="ResponseTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,10,0" Height="100" Width="460" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,160,0,0" Width="100" Click="SaveResponse_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,160,10,0" Width="100" Click="Cancel_Click"/>
    </Grid>
</Window>
