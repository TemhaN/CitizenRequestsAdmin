<Application x:Class="CitizenRequestsAdmin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CitizenRequestsAdmin"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Purple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Chip.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
            <SolidColorBrush x:Key="BackgroundColor" Color="White"/>
            <SolidColorBrush x:Key="TextColor" Color="Black"/>
            <SolidColorBrush x:Key="InputBackgroundColor" Color="#BDBDBD"/>
            <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#2196F3"/>
            <SolidColorBrush x:Key="BorderColor" Color="#BDBDBD"/>
            <SolidColorBrush x:Key="MaterialDesignBody" Color="White"/>
            <SolidColorBrush x:Key="MaterialDesignLightBackground" Color="White"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
